@model MVCKutuphane.Models.Entity.Uyeler
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/_AnaBar.cshtml";
}

@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
    <h2>Üye Güncelle</h2>
    <div class="form-group">
        <label>Üye ID</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        <br />
        <label>Üye </label>
        @Html.TextBoxFor(x => x.Uye, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Uye, "", new { @style = "color : red" })
        <br />
        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.Kullanici, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Kullanici, "", new { @style = "color : red" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color : red" })
        <br />
        <label>Fotoğraf</label>
        @Html.TextBoxFor(x => x.Fotograf, new { @class = "form-control" })
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
        <br />
        <label>Okul</label>
        @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })
        <br />
    </div>
    <button class="btn btn-primary">Üye Güncelle</button>
}

