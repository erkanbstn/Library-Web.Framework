@model MVCKutuphane.Models.Entity.Kitaplar
@{
    ViewBag.Title = "YeniKitap";
    Layout = "~/Views/Shared/_AnaBar.cshtml";
}


<form method="post">
    <h2>Yeni Kitap</h2>
    <div> </div>
    <div style="margin-top:15px">
        <label>
            Kitap Adı
        </label>
        @Html.TextBoxFor(y => y.Kitap, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Kitap, "", new { @style = "color : red" })
    </div>
    <div style="margin-top:15px">
        <label>
            Kategori
        </label>
        @Html.DropDownListFor(y => y.Kategoriler.ID, (List<SelectListItem>)ViewBag.dgr, "Kategori Seçiniz..", new { @class = "form-control" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Yazar
        </label>
        @Html.DropDownListFor(y => y.Yazarlar.ID, (List<SelectListItem>)ViewBag.dgr2, "Yazar Seçiniz..", new { @class = "form-control" })

    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Basım Yılı
        </label>
        @Html.TextBoxFor(y => y.Basim, new { @class = "form-control" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Yayınevi
        </label>
        @Html.TextBoxFor(y => y.YayinEvi, new { @class = "form-control" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Sayfa
        </label>
        @Html.TextBoxFor(y => y.Sayfa, new { @class = "form-control" })
    </div>
    <br />
    <button class="btn btn-primary">Yeni Kitap Ekle</button>
    <input type="hidden" name="Durum" value="true"/>
</form>



