@model MVCKutuphane.Models.Entity.Yazarlar
@{
    ViewBag.Title = "YeniYazar";
    Layout = "~/Views/Shared/_AnaBar.cshtml";
}

<form method="post">
    <h2>Yeni Yazar</h2>
    <div> </div>
    <div style="margin-top:15px">
        <label>
            Yazar Adı
        </label>
        @Html.TextBoxFor(y => y.Yazar, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Yazar, "", new { @style = "color : red" })
    </div>
    <div style="margin-top:15px">
        <label>
            Yazar Detay
        </label>
        @Html.TextBoxFor(y => y.Detay, new { @class = "form-control" })
    </div>
    <br />
    <button class="btn btn-primary">Yeni Yazar Ekle</button>
</form>


